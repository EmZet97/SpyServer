<Window x:Class="SpyServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpyServer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        
        <Button x:Name="ServerButton" Content="Start Server" Click="ServerButton_Click"></Button>
        <Button x:Name="ClientButton" Content="Start Client" Click="ClientButton_Click"></Button>
        <Button x:Name="ServerSendButton" Content="Send From Server" Click="SendButton_Click"></Button>
        <Button x:Name="ClientSendButton" Content="Send From Last Client" Click="ClientSendButton_Click"></Button>
        <TextBlock x:Name="INFO"></TextBlock>
        
    </StackPanel>
</Window>
