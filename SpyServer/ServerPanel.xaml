<Page x:Class="SpyServer.ServerPanel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SpyServer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ServerPanel">

    <StackPanel>
        <TextBox x:Name="LogTextBox" Margin="10 20 10 5" Height="200"></TextBox>
        <Button Content="Screenshoty ekranu" Name="ssButton" Margin="200 5 200 5" Click="SsButton_Click"></Button>
        <CheckBox Content="Key logger" IsChecked="False" Name="klRadioButton" Margin="200 5 200 5" Click="KlRadioButton_Click"></CheckBox>
        <Grid Height="150">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="0"></TextBlock>
            <Image Grid.Column="1"></Image>
        </Grid>
    </StackPanel>
</Page>
